{
    "name": "un-ocha/docstore-site",
    "description": "Document store - Drupal 8",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Peter Droogmans",
            "role": "Lead Engineer"
        },
        {
            "name": "Peter Lieverdink",
            "role": "Ops Engineer"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "require": {
        "php": ">=8.0",
        "composer/installers": "^1.7",
        "cweagans/composer-patches": "^1.7",
        "drupal-composer/preserve-paths": "^0.1.6",
        "drupal/address": "^1.9",
        "drupal/admin_denied": "^1.0",
        "drupal/admin_toolbar": "^3.0",
        "drupal/config_filter": "^2.2",
        "drupal/config_ignore": "2.x-dev",
        "drupal/config_split": "^2.0.0-beta4",
        "drupal/core-composer-scaffold": "^9.2",
        "drupal/core-dev": "^9.2",
        "drupal/core-project-message": "^9.2",
        "drupal/core-recommended": "^9.2",
        "drupal/devel_php": "^1.1",
        "drupal/entity_reference_uuid": "^2.0.0-beta1",
        "drupal/entity_usage": "^2.0@beta",
        "drupal/facets": "^2.0",
        "drupal/geofield": "^1.16",
        "drupal/jsonapi_extras": "^3.16",
        "drupal/libraries": "^3.0-alpha1",
        "drupal/maintenance200": "^1.0",
        "drupal/meta_entity": "^1.0",
        "drupal/restui": "^1.18",
        "drupal/search_api": "^1.12",
        "drupal/search_api_solr": "^4.1",
        "drupal/social_auth_hid": "^3.1",
        "drupal/user_bundle": "^1.0",
        "drupal/webhooks": "1.x-dev@dev",
        "drush/drush": "^10.3",
        "symfony/uid": "^5.3"
    },
    "require-dev": {
        "dmore/chrome-mink-driver": "^2.7",
        "drupal/coder": "^8.3",
        "drupal/console": "~1.0",
        "drupal/devel": "^5.0.2",
        "drupal/upgrade_rector": "^1.0@alpha",
        "drupal/upgrade_status": "^3.10",
        "drupal/yaml_content": "^1.0",
        "kint-php/kint": "^3.3",
        "squizlabs/php_codesniffer": "^3.3",
        "symfony/debug": "^4.4",
        "vlucas/phpdotenv": "^2.4",
        "webflo/drupal-finder": "^1.0.0",
        "webmozart/path-util": "^2.3",
        "weitzman/drupal-test-traits": "^1.3"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "bin-dir": "vendor/bin/",
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "cweagans/composer-patches": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "drupal-composer/preserve-paths": true,
            "drupal/core-composer-scaffold": true,
            "drupal/core-project-message": true,
            "drupal/console-extend-plugin": true,
            "symfony/flex": true
        }
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ]
    },
    "extra": {
        "drush": {
          "services": {
            "drush.services.yml": "^10"
          }
        },
        "enable-patching": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "installer-types": ["bower-asset", "npm-asset"],
        "installer-paths": {
            "html/core": ["type:drupal-core"],
            "html/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ],
            "html/modules/contrib/{$name}": ["type:drupal-module"],
            "html/profiles/contrib/{$name}": ["type:drupal-profile"],
            "html/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/{$name}": ["type:drupal-drush"]
        },
        "drupal-scaffold": {
            "initial": {
                "sites/default/default.services.yml": "sites/default/services.yml",
                "sites/default/default.settings.php": "sites/default/settings.php",
                ".editorconfig": "../.editorconfig",
                ".gitattributes": "../.gitattributes"
            },
            "locations": {
                "web-root": "html/"
            },
            "omit-defaults": false
        },
        "merge-plugin": {
            "include": [
                "html/core/composer.json"
            ],
            "recurse": true,
            "replace": false,
            "merge-extra": false
        },
        "preserve-paths": [
            "html/modules/custom",
            "html/themes/custom",
            "html/sites/default"
        ],
        "patches-file": "composer.patches.json",
        "composer-exit-on-patch-failure": true
    },
    "scripts": {
        "git-hooks": "test -d .git && git config core.hooksPath git-hooks || exit 0",
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles",
            "DrupalProject\\composer\\ScriptHandler::removeUnnecessaryFiles",
            "@git-hooks"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles",
            "DrupalProject\\composer\\ScriptHandler::removeUnnecessaryFiles",
            "@git-hooks"
        ]
    }
}
